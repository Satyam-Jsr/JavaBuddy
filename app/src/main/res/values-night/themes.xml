<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JavaBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_dark_color</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>
    
    <!-- Custom theme for splash screen in dark mode -->
    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
    </style>
</resources>